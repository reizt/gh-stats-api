{
	"private": true,
	"type": "commonjs",
	"scripts": {
		"dev": "nodemon --exec 'run-s dev.clear dev.build dev.start' --watch src --ext ts --delay 0.2 --quiet",
		"dev.build": "node --no-warnings esbuild.mjs dev-server",
		"dev.start": "node --env-file .env tmp/dev-server.cjs",
		"dev.clear": "clear",
		"build": "node --no-warnings esbuild.mjs",
		"check-all": "run-p typecheck fmt.check",
		"fmt": "biome check --apply .",
		"fmt.check": "biome check .",
		"typecheck": "tsc --incremental --noEmit",
		"ut": "vitest run",
		"ut.watch": "vitest watch"
	},
	"dependencies": {
		"axios": "^1.6.8",
		"express": "^4.19.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"satori": "^0.10.13",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.12",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"esbuild": "^0.21.2",
		"lefthook": "^1.6.11",
		"marked": "^12.0.2",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	}
}
